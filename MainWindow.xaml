<Window x:Class="Exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Text="Группа"/>
        <xctk:MaskedTextBox Grid.Row="1" Width="250" Height="40" x:Name="MasksGroup" Mask="00-00.000"/>
        <TextBlock Grid.Row="2" Text="Предмет"/>
        <TextBox Width="250" Height="40" x:Name="tb1" Grid.Row="2" MinLines="10" MaxLength="70"></TextBox>
        <TextBlock Grid.Row="3" Text="Начало экзамена"/>
        <xctk:MaskedTextBox Grid.Row="3" Width="250" Height="40" x:Name="MasksDate" Mask="00/00/0000"/>
        
    </Grid>
</Window>
